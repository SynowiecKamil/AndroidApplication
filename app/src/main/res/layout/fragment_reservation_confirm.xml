<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controller.Fragments.ReservationConfirmFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp"
        >

        <TextView
            android:paddingTop="22dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Podsumowanie rezerwacji"
            android:textAllCaps="true"
            android:layout_gravity="center_horizontal"
            android:textSize="24sp"
            android:id="@+id/txt_title"
            android:paddingBottom="30dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imageView_physio"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/physiotherapist" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fizjoterapeuta: "
                android:textSize="20sp"
                android:paddingLeft="5dp"
                android:id="@+id/txt_physio_title"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="txt_physio"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/tealgreen"
                android:id="@+id/txt_physio"/>
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imageView_patient"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/man" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pacjent: "
                android:textSize="20sp"
                android:paddingLeft="5dp"
                android:id="@+id/txt_patient_title"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="txt_patient"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/tealgreen"
                android:id="@+id/txt_patient"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imageView_treatment"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/physical_therapy" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rodzaj zabiegu: "
                android:textSize="20sp"
                android:paddingLeft="5dp"
                android:id="@+id/txt_treatment_title"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="txt_treatment"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/tealgreen"
                android:id="@+id/txt_treatment"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imageView_date"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/calendar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Termin: "
                android:textSize="20sp"
                android:paddingLeft="5dp"
                android:id="@+id/txt_date_title"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="txt_date"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/tealgreen"
                android:id="@+id/txt_date"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imageView_price"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/time" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Koszt: "
                android:textSize="20sp"
                android:paddingLeft="5dp"
                android:id="@+id/txt_price_title"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="txt_price"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/tealgreen"
                android:id="@+id/txt_price"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imageView_time"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/time" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Godzina: "
                android:textSize="20sp"
                android:paddingLeft="5dp"
                android:id="@+id/txt_time_title"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="txt_time"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/tealgreen"
                android:id="@+id/txt_time"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:paddingBottom="20dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imageView_place"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/location" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lokalizacja: "
                android:textSize="20sp"
                android:paddingLeft="5dp"
                android:id="@+id/txt_place_title"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="txt_place"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/tealgreen"
                android:id="@+id/txt_place"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Potwierdzam rezerwacjÄ™"
            android:background="@drawable/square_button"
            android:backgroundTint="@color/tealgreen"
            android:textSize="14dp"/>

    </LinearLayout>



</LinearLayout>